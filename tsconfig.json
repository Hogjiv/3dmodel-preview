{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "outDir": "dist-electron/main" // Set the output directory to dist-electron/main
  },
  "include": [
    "src",
    "src/types/electron-env.d.ts", // Ensure this path is correct
    "src/**/*"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}